<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="me.ykrank.s1next.view.page.setting.blacklist.BlackListRemarkDialogFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dialog_padding_bottom"
        android:paddingEnd="@dimen/dialog_padding"
        android:paddingLeft="@dimen/dialog_padding"
        android:paddingRight="@dimen/dialog_padding"
        android:paddingStart="@dimen/dialog_padding"
        android:paddingTop="@dimen/dialog_padding">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/blacklist_remark_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintAnimationEnabled="false">

            <EditText
                android:id="@+id/blacklist_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_blacklist_remark"
                android:imeActionId="@integer/ime_action_id"
                android:imeActionLabel="@string/dialog_button_text_confirm"
                android:inputType="text"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</layout>
